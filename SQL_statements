SELECT * FROM ecom.customer_data;
SELECT COUNT(*) AS total_customers FROM ecom.customer_data;
SELECT AVG(Income) AS average_income FROM ecom.customer_data;
SELECT ID,Income FROM ecom.customer_data WHERE Income>50000;
SELECT count(*) FROM ecom.customer_data WHERE Income>50000;
SELECT ID,NumWebVisitsMonth FROM ecom.customer_data WHERE NumWebVisitsMonth>3;
SELECT COUNT(*) FROM ecom.customer_data WHERE NumWebVisitsMonth>3;
SELECT ID,AcceptedCmp1 FROM ecom.customer_data WHERE AcceptedCmp1=1 or AcceptedCmp2=1 or AcceptedCmp3=1 or AcceptedCmp4=1 or AcceptedCmp5=1;
SELECT count(*) FROM ecom.customer_data WHERE AcceptedCmp1=1 or AcceptedCmp2=1 or AcceptedCmp3=1 or AcceptedCmp4=1 or AcceptedCmp5=1;
SELECT count(*) FROM ecom.customer_data WHERE AcceptedCmp1=1 or AcceptedCmp2=1 or AcceptedCmp3=1 or AcceptedCmp4=1 or AcceptedCmp5=1;
SELECT count(*) AS customer_compalints FROM ecom.customer_data WHERE Complain=1;
SELECT sum(MntWines) AS total_spent_on_wines FROM ecom.customer_data;
SELECT count(*) FROM ecom.customer_data WHERE Kidhome=0 and Teenhome=0;
SELECT avg(2024 - Year_Birth) FROM ecom.customer_data;
SELECT Marital_Status,count(*) FROM ecom.customer_data GROUP BY Marital_Status;
SELECT ID,Dt_Customer FROM ecom.customer_data ORDER BY Dt_Customer DESC LIMIT 1;
SELECT sum(MntWines), sum(MntFruits), sum(MntMeatProducts), sum(MntFishProducts), sum(MntSweetProducts), sum(MntGoldProds) FROM ecom.customer_data;
SELECT ID,avg(NumWebVisitsMonth) FROM ecom.customer_data GROUP BY ID; 
SELECT ID,(MntWines+MntFruits+MntMeatProducts+MntFishProducts+MntSweetProducts+MntGoldProds)as total_spent FROM ecom.customer_data HAVING total_spent>2000;
SELECT COUNT(*) FROM ecom.customer_data WHERE (MntWines+MntFruits+MntMeatProducts+MntFishProducts+MntSweetProducts+MntGoldProds)>2000;
SELECT ID,MntWines from ecom.customer_data ORDER BY MntWines DESC LIMIT 5;
SELECT Education,count(*) from ecom.customer_data GROUP BY Education order by count(*) DESC LIMIT 1;
SELECT ID FROM ecom.customer_data WHERE Recency<30;
SELECT AVG(AcceptedCmp3+AcceptedCmp4+AcceptedCmp5+AcceptedCmp1+AcceptedCmp2) FROM ecom.customer_data;
SELECT ID, (MntWines + MntFruits + MntMeatProducts + MntFishProducts + MntSweetProducts + MntGoldProds) AS total_purchases FROM ecom.customer_data ORDER BY total_purchases DESC LIMIT 5;
SELECT Response, COUNT(*) AS response_count FROM ecom.customer_data GROUP BY Response; 
